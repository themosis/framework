{
  "name": "themosis/framework",
  "description": "The Themosis framework.",
  "keywords": ["themosis", "framework", "wordpress"],
  "license": "GPL-2.0-or-later",
  "support": {
    "issues": "https://github.com/themosis/framework/issues",
    "source": "https://github.com/themosis/framework"
  },
  "authors": [
    {
      "name": "Julien Lamb√©",
      "email": "julien@themosis.com",
      "homepage": "https://www.themosis.com/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Themosis\\": "src/"
    },
    "files": [
      "src/Foundation/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Themosis\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "composer/installers": "^1.9",
    "laravel/framework": "^10.1",
    "laravel/tinker": "^2.8",
    "league/fractal": "^0.20",
    "paragonie/sodium_compat": "^1.17",
    "predis/predis": "^1.1",
    "symfony/property-access": "^6.0",
    "themosis/composer-exclude-files": "^1.0",
    "twig/twig": " ^3.5"
  },
  "require-dev": {
    "ext-pdo": "*",
    "beyondcode/laravel-dump-server": "^1.8",
    "friendsofphp/php-cs-fixer": "^3.9",
    "johnpbloch/wordpress-core": "^6.1",
    "orchestra/testbench": "^8.0",
    "phpunit/phpunit": "^10.0"
  },
  "scripts": {
    "test": "XDEBUG_MODE=coverage phpunit",
    "fix": "php-cs-fixer fix"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "themosis/composer-exclude-files": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "exclude-from-files": {
      "laravel/framework": [
        "src/Illuminate/Foundation/helpers.php"
      ]
    },
    "laravel": {
      "providers": [
        "Themosis\\Foundation\\Providers\\FoundationServiceProvider"
      ]
    }
  }
}
